<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UrbanAirship.InAppHtml"/>

    <style name="UrbanAirship.InAppHtml.Layout"/>

    <style name="UrbanAirship.InAppHtml.DismissButton">
        <item name="android:background">@drawable/ua_iam_dismiss_background</item>
        <item name="android:src">@drawable/ua_ic_close_white_18dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">top|end</item>
    </style>

    <style name="UrbanAirship.InAppHtml.WebView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="UrbanAirship.InAppHtml.Progress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>